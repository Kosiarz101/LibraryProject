@model List<LibraryProject.Models.GlobalParameter>
@{
    ViewBag.Title = "ChangeGlobalParameters";
    Layout = null;
}

<h2>ChangeGlobalParameters</h2>

@using (Html.BeginForm("ChangeGlobalParameters", "Manage", FormMethod.Post))
{
    <div >
        @for (int i=0; i<Model.Count; i++)
        {
            <div class="form-inline">
                <div class="col-sm-2">
                    @Html.DisplayFor(model => Model.ElementAt(i).Name)
                </div>
                <div class="col-auto">
                    @Html.EditorFor(m => Model[i].Value, new { htmlAttributes = new { @class = "form-control", @Value = Model.ElementAt(i).Value } })
                </div>
                @Html.HiddenFor(m => Model[i].Name)
                @Html.HiddenFor(m => Model[i].Id)
            </div>
        }
        <div class="row">
            <div class=" col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
}
