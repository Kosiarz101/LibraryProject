@model LibraryProject.Models.Book

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <hr />
    <div class="row d-flex">
        <div class="col-sm-3">
            <h3>
                @Html.DisplayNameFor(model => model.Title)
            </h3>
        </div>
        <div class="col-auto">
            <h3>
                @Html.DisplayFor(model => model.Title)
            </h3>
        </div>
    </div>
    <div class="row d-flex">
        <div class="col-sm-3">
            <h3>
                @Html.DisplayNameFor(model => model.Author)
            </h3>
        </div>
        <div class="col-auto">
            <h3>
                @Html.DisplayFor(model => model.Author)
            </h3>
        </div>
    </div>
    <div class="row d-flex" style="color:gray; font-style:italic">
        <div class="col-sm-3">
            <h4>
                @Html.DisplayNameFor(model => model.PublicationDate)
            </h4>
        </div>
        <div class="col-auto">
            <h4>
                @Model.PublicationDate.ToString("dd MMMM yyyy")
            </h4>
        </div>
    </div>
    <div class="row d-flex">

        @if (Model.Quantity == 0)
        {
            <div class="col-sm-3">
                <p style="color:red">Out of stock </p>
            </div>
            <div class="col-auto">
                <a style="color:cornflowerblue">join the queue</a>
            </div>
        }
        else
        {
            <div class="col-sm-3">
                <p style="color:green"> Book is available</p>
            </div>
            <div class="col-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Add to Cart", "AddToCart", "Book", new { Id = Model.Id }, new { @class = "btn btn-primary", @Id = "link" });
                }
                else
                {
                    <a>You must be logged to borrow books</a>
                }
            </div>
        }
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h3>
                @Html.DisplayNameFor(model => model.Describtion)
            </h3>
        </div>
        <div class="col-auto">
            <p>
                @Html.DisplayFor(model => model.Describtion)
            </p>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
@section Scripts
{
    <script src="@Url.Content("~/Scripts/ShoppingCart.js")"></script>
}
